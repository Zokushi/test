{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", // Match "type": "commonjs" in package.json
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "ts-node": {
    "transpileOnly": true, // Faster execution for development
    "files": true // Ensure ts-node processes .ts files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}